// Prisma schema for DevTree learning workspace

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  password    String?  // Hashed; null for OAuth-only users
  name        String?
  image       String?
  preferences         Json?    // { theme?, locale?, tagsPerPageEnabled?, tagsPerBlockEnabled?, recordingStartSoundEnabled? }
  /// Excalidraw library items the user added locally (from a .excalidrawlib
  /// file or by composing elements in-canvas). Stored as a JSON array of
  /// ExcalidrawLibraryItem objects.  Separate from URL-sourced libraries
  /// (ExcalidrawLibrary / UserLibrary) so the two can be managed independently.
  localLibraryItems   Json     @default("[]")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  accounts  Account[]
  sessions  Session[]
  pages     Page[]
  folders   Folder[]
  libraries UserLibrary[]
}

// ─── Excalidraw library storage ───────────────────────────────────────────────
//
// ExcalidrawLibrary stores a SINGLE unique library package (e.g. "Software
// Architecture" from libraries.excalidraw.com). Multiple users can add the same
// library; the items JSON is stored only ONCE, identified by the sourceUrl.
//
// UserLibrary is the many-to-many join table that records which libraries each
// user has access to.

model ExcalidrawLibrary {
  id        String   @id @default(cuid())
  /// The canonical URL the library was fetched from (e.g.
  /// https://libraries.excalidraw.com/libraries/…/….excalidrawlib).
  /// Unique — ensures the same library is stored only once across all users.
  sourceUrl String   @unique
  /// Display name extracted from the library file (or derived from the URL).
  name      String   @default("")
  /// Serialised array of ExcalidrawLibraryItem objects.
  items     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users     UserLibrary[]
}

model UserLibrary {
  userId    String
  libraryId String
  addedAt   DateTime @default(now())

  user    User              @relation(fields: [userId],    references: [id], onDelete: Cascade)
  library ExcalidrawLibrary @relation(fields: [libraryId], references: [id], onDelete: Cascade)

  @@id([userId, libraryId])
}

model Folder {
  id        String   @id @default(cuid())
  name      String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner    User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId  String

  parent   Folder?  @relation("FolderToChildren", fields: [parentId], references: [id])
  parentId String?
  children Folder[] @relation("FolderToChildren")

  pages    Page[]
}

model Page {
  id        String   @id @default(cuid())
  title     String
  order     Int      @default(0)
  tags      String[]  @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner    User    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId  String

  folder   Folder? @relation(fields: [folderId], references: [id], onDelete: SetNull)
  folderId String?

  blocks Block[]
}

model Block {
  id        String   @id @default(cuid())
  type      String
  order     Int
  colSpan   Int      @default(2)
  tags      String[] @default([])
  content   Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  page   Page   @relation(fields: [pageId], references: [id], onDelete: Cascade)
  pageId String
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

